@{
    ViewBag.Title = "تسعير العطاء";
}

<h2 class="text-primary">تسعير العطاء</h2>

<form>
    <h5 class="text-primary">اختر العطاء</h5>

    <div class="mb-3">
        <label class="form-label">رقم العطاء</label>
        <select class="form-control">
            <option value="bidNumber1">Bid Number 1</option>
            <option value="bidNumber2">Bid Number 2</option>
            <option value="bidNumber3">Bid Number 3</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">المالك</label>
        <input type="text" class="form-control" readonly value="مالك العطاء" />
    </div>

    <div class="mb-3">
        <label class="form-label">الوصف</label>
        <input type="text" class="form-control" readonly value="وصف العطاء" />
    </div>
    <hr />
    <div class="mb-3">
        <label class="form-label">رقم التسعير</label>
        <input type="number" class="form-control" />
    </div>
    <div class="row mb-3">

        <div class="col-md-4">
            <label class="form-label">تاريخ الادخال</label>
            <input type="datetime-local" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">حالة التسعير</label>
            <select class="form-control">
                <!-- Add initial price offer status options or enter new text -->
                <option value="option1">Option 1</option>
                <option value="option2">Option 2</option>
                <option value="option3">Option 3</option>
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">حالة المراجعة</label>
            <select class="form-control">
                <!-- Add initial price offer review status options or enter new text -->
                <option value="reviewOption1">Review Option 1</option>
                <option value="reviewOption2">Review Option 2</option>
                <option value="reviewOption3">Review Option 3</option>
            </select>
        </div>
    </div>


    <div class="mb-3">
        <label class="form-label">السعر</label>
        <select class="form-control">
            <!-- Add pricing options -->
            <option value="priceOption1">Price Option 1</option>
            <option value="priceOption2">Price Option 2</option>
            <option value="priceOption3">Price Option 3</option>
        </select>
    </div>
    <br />

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>مسلسل</th>
                    <th>البند</th>
                    <th>الوحدة</th>
                    <th>الكمية</th>
                    <th>تكلفة الوحدة</th>
                    <th>اجمالي التكلفة للوحدات</th>
                    <th>تكلفة غير مباشرة</th>
                    <th>التجهيزات</th>
                    <th>الصيانات</th>
                    <th>مصاريف ادارية</th>
                    <th>اجمالي تكاليف غير مباشرة</th>
                    <th>التكلفة الاجمالية</th>
                    <th>بند ضريبي</th>
                    <th>قيمة الضرائب</th>
                    <th>نسبة الربح</th>
                    <th>قيمة الربح</th>
                    <th>اجمالي سعر قبل الضرائب</th>
                    <th>اجمالي سعر البيع</th>
                    <th>يبدأ في تاريخ</th>
                    <th>ينتهي في تاريخ</th>
                    <th>ملاحظات</th>
                </tr>
            </thead>
            <tbody>
                <!-- Placeholder data for the table -->
                @for (int i = 1; i <= 3; i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>بند @i</td>
                        <td>وحدة @i</td>
                        <td>1</td>
                        <td>100</td>
                        <td>100</td>
                        <td>50</td>
                        <td>20</td>
                        <td>10</td>
                        <td>5</td>
                        <td>85</td>
                        <td>185</td>
                        <td>بند ضريبي @i</td>
                        <td>15</td>
                        <td>10%</td>
                        <td>18.5</td>
                        <td>203.5</td>
                        <td>221.5</td>
                        <td>01/01/2023</td>
                        <td>31/12/2023</td>
                        <td>ملاحظات @i</td>
                    </tr>
                }
                <tr>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                    <td><input type="text" class="form-control" /></td>
                </tr>

            </tbody>
        </table>
    </div>

    <div class="mb-3">
        <button type="button" class="btn btn-primary" onclick="addRow()">اضافة بند</button>
    </div>

    <div class="col-md-4">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="priceApprovalCheckbox">
            <label class="form-check-label" for="priceApprovalCheckbox">
                اعتماد التسعير
            </label>
        </div>
    </div>
    
    <br />

    <div class="mb-3">
        <button type="submit" class="btn btn-success">حفظ</button>
        <button type="button" class="btn btn-secondary">الغاء</button>
    </div>
</form>

<script>
    function addRow() {
        var table = document.querySelector('table tbody');
        var newRow = table.insertRow(table.rows.length);

        for (var i = 0; i < 22; i++) {
            var cell = newRow.insertCell(i);
            var input = document.createElement('input');
            input.type = 'text';
            input.className = 'form-control';
            cell.appendChild(input);
        }
    }
</script>
