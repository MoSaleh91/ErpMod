@{
    ViewBag.Title = "حالة العطاءات";
}

<div class="container-fluid mt-5 text-center">
    <h2 class="display-4 text-primary">حالة العطاءات</h2>

    <p class="lead text-justify">
        هذه الصفحة تعرض حالة جميع العطاءات، بما في ذلك المسلسل واسم المشروع وموقف المشروع والمالك ومدير المشروع والملاحظات وملفات أخرى.
    </p>

    <div class="row mt-5">
        <div class="col-md-12">
            <h3 class="text-primary">قائمة العطاءات</h3>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>مسلسل</th>
                        <th>اسم المشروع</th>
                        <th>موقف المشروع</th>
                        <th>المالك</th>
                        <th>مدير المشروع</th>
                        <th>ملاحظات</th>
                        <th>ملفات أخرى</th>
                        <th>نسبة الانجاز</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td><a href="#">اسم المشروع 1</a></td>
                        <td>مستعرض</td>
                        <td>شركة المالك 1</td>
                        <td>مدير المشروع 1</td>
                        <td>ملاحظات حول المشروع 1</td>
                        <td><a href="#">ملفات إضافية</a></td>
                        <td><a class="toggle-link" onclick="toggleChart()">اظهار</a></td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td><a href="#">اسم المشروع 2</a></td>
                        <td>قيد التنفيذ</td>
                        <td>شركة المالك 2</td>
                        <td>مدير المشروع 2</td>
                        <td>ملاحظات حول المشروع 2</td>
                        <td><a href="#">ملفات إضافية</a></td>
                        <td><a class="toggle-link" onclick="toggleChart()">اظهار</a></td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td><a href="#">اسم المشروع 3</a></td>
                        <td>منجز</td>
                        <td>شركة المالك 3</td>
                        <td>مدير المشروع 3</td>
                        <td>ملاحظات حول المشروع 3</td>
                        <td><a href="#">ملفات إضافية</a></td>
                        <td><a class="toggle-link" onclick="toggleChart()">اظهار</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="chart-container" style="display: none;">
                <h3 class="text-primary">نسبة الانجاز</h3>
                <div class="chart-axis-x"></div>
                <div class="chart-axis-y"></div>
                <div class="chart-point" style="top: 30%; left: 20%;"></div>
                <div class="chart-point" style="top: 60%; left: 50%;"></div>
                <div class="chart-point" style="top: 80%; left: 80%;"></div>
                <div class="chart-line" style="top: 30%; left: 20%; height: 30%; width: 1px;"></div>
                <div class="chart-line" style="top: 60%; left: 50%; height: 20%; width: 1px;"></div>
                <div class="chart-line" style="top: 80%; left: 80%; height: 0%; width: 1px;"></div>
            </div>
        </div>
    </div>
</div>
<style>
    .chart-container {
        position: relative;
        width: 100%;
        height: 300px;
        border: 1px solid #ccc;
        margin-top: 10px;
    }

    .chart-axis-x {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: #333;
    }

    .chart-axis-y {
        position: absolute;
        top: 0;
        left: 0;
        width: 1px;
        height: 100%;
        background-color: #333;
    }

    .chart-point {
        position: absolute;
        width: 8px;
        height: 8px;
        background-color: #007bff; /* Bootstrap primary color */
        border-radius: 50%;
        transform: translate(-50%, -50%);
    }

    .chart-line {
        position: absolute;
        background-color: #007bff; /* Bootstrap primary color */
    }

    .toggle-link {
        cursor: pointer;
        color: #007bff; /* Bootstrap primary color */
    }

</style>
<script>
    function toggleChart() {
        var chart = document.querySelector('.chart-container');
        var toggleLink = document.querySelector('.toggle-link');
        chart.style.display = (chart.style.display === 'none' || chart.style.display === '') ? 'block' : 'none';
        toggleLink.textContent = (chart.style.display === 'none') ? 'اظهار' : 'اخفاء';
    }
</script>

